@model CNPM_Tour.Models.NhanVien

@{
    ViewBag.Title = "ChinhSuaNV";
    Layout = "~/Views/Admin/Layout/_Admin.cshtml";
    ViewBag.Name = "Quản lý nhân viên";
    ViewBag.qlnv = "active";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="" style="height: 100%; display: flex; justify-content: center; align-items: center;">
            <p class="" style="font-size: 24px; border: 2px solid #000; border-radius: 10px;padding:10px; font-weight: bold;">Chỉnh sửa tour</p>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaNV)

        <div class="form-group">
            @Html.LabelFor(model => model.TenNV, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChucVu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChucVu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class=" col-4" style="justify-content: center; white-space: nowrap; margin: 4px auto; border: 2px solid #000; padding: 15px 10px 10px 10px; font-size: 20px; text-align: center; max-width: fit-content; font-weight: bold; border-radius: 5px; margin-left: 3%;">
                @Html.ActionLink("Quay lại", "QLNhanVien")
            </div>
            <div class=" col-8" style=" justify-content: center; white-space: nowrap; margin: 4px auto; border: 2px solid #000; padding: 10px; font-size: 20px; text-align: center; max-width: fit-content; font-weight: bold; border-radius: 5px; margin-right: 18%;">
                <input type="submit" value="Lưu" class="btn btn-default" style="justify-content: center; font-size: 20px; font-weight: bold " />
            </div>
        </div>
    </div>
}

