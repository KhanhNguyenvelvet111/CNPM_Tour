@model IEnumerable<CNPM_Tour.Models.Tour>
@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Admin/Layout/_Admin.cshtml";
    ViewBag.Name = "Trang Chủ";
    ViewBag.home = "active";
}

<body>

    @* table 1*@
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h2 class="tile-title">Tour đã thêm gần đây</h2>

                @*<a class="btn btn-sm btn-add " type="button" title="CreateTour" href="/Tourmanager/CreateLoaiTour">
                        <i class="fas fa-plus"> </i> Tạo mới
                    </a>*@
                <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MaTour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TenTour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiaDiem)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MoTa)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TTVC)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.forsale)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BannerUrl)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Partner.TenDT)
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaTour)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenTour)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaDiem)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MoTa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TTVC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.forsale)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BannerUrl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Partner.TenDT)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "ChinhSuaTour", new { id = item.MaTour }) |
                                @Html.ActionLink("Details", "TourDetails", new { id = item.MaTour }) |
                                @Html.ActionLink("Delete", "XoaTour", new { id = item.MaTour })
                            </td>
                        </tr>
                    }
                </table>
                @*<a class="btn btn-cancel" title="Trở lại" href="~/Tourmanager/QuanLyTour">
                        Trở lại
                    </a>*@
            </div>
        </div>

    </div>
    @* table 2 *@
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h2 class="tile-title">Đối tác đã thêm gần đây</h2>

                @*<a class="btn btn-sm btn-add " type="button" title="CreateTour" href="/Tourmanager/CreateLoaiTour">
                        <i class="fas fa-plus"> </i> Tạo mới
                    </a>*@
                <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" role="grid" aria-describedby="sampleTable_info">
                    <thead>
                        <tr>
                            <th>Mã loại</th>
                            <th>
                                Tên loại
                            </th>
                            <th>
                                Chiết khấu
                            </th>
                            <th>
                                Tùy chọn
                            </th>
                        </tr>
                    </thead>
                    <tr>
                        <td class="text-center">
                        </td>
                        <td class="text-center">
                        </td>
                        <td class="text-center">
                        </td>
                        <td class="text-center">
                            @*<a class="btn btn-cancel" title="Edit" href="#">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-excel" ata-toggle="tooltip" title="Delete" data-target="#" data-toggle="modal">
                                    <i class="fas fa-trash"></i>
                                </a>*@
                        </td>
                    </tr>
                </table>
                @*<a class="btn btn-cancel" title="Trở lại" href="~/Tourmanager/QuanLyTour">
                        Trở lại
                    </a>*@
            </div>
        </div>
    </div>
    @* gg map *@
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">
                    <i class="bx bxs-map"></i>
                    Visitors
                </h3>
                <div class="embed-responsive-item" style="height: 310px">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15739731.94178454!2d96.86731624837675!3d15.607242742130582!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31157a4d736a1e5f%3A0xb03bb0c9e2fe62be!2zVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1677896157419!5m2!1svi!2s" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</body>

