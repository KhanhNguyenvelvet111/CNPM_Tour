@model CNPM_Tour.Models.KhachHang
@{
    ViewBag.Title = "KhachHangDetails";
    Layout = "~/Views/Admin/Layout/_Admin.cshtml";
    ViewBag.Name = "Quản lý khách hàng";
    ViewBag.qlkh = "active";
}
<body>
    <div class="" style="width: 185px; white-space: nowrap; margin: 4px auto; border: 2px solid #000; border-radius: 10px; padding-top: 10px; ">
        <div class="" style="height: 100%;   display: flex;   justify-content: center;   align-items: center;">
            <p class="" style="font-size: 24px;  font-weight: bold;">Chi tiết tour</p>
        </div>
    </div>

    @* table 1*@
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <form action="/action_page.php">
                    <table class="table table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0"
                           border="0" role="grid" aria-describedby="sampleTable_info">
                        <h2 class="tile-title">Khách hàng @Html.DisplayFor(model => Model.MaKH)</h2>
                        <tr style="display:flex;width:100%">
                            <td>
                                <label for="fname">Mã khách hàng:</label>
                                @Html.DisplayFor(model => model.MaKH)
                            </td>
                        </tr>
                        <tr style="display:flex;width:100%">
                            <td>
                                <label for="fname">Tên khách hàng:</label>
                                @Html.DisplayFor(model => model.TenKH)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Giới tính:</label>
                                @Html.DisplayFor(model => model.GioiTinh)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Ngày sinh:</label>
                                @Html.DisplayFor(model => model.NgaySinh)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Ngày sinh:</label>
                                @Html.DisplayFor(model => model.MatKhau)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Email:</label>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Email 2:</label>
                                @Html.DisplayFor(model => model.Email2)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Email 3:</label>
                                @Html.DisplayFor(model => model.Email3)
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <label for="fname">Số điện thoại:</label>
                                @Html.DisplayFor(model => model.SDT)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Số điện thoại 2:</label>
                                @Html.DisplayFor(model => model.SDT2)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Số điện thoại 3:</label>
                                @Html.DisplayFor(model => model.SDT3)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Loại khách hàng:</label>
                                @Html.DisplayNameFor(model => model.LoaiKH.LoaiKH1)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">User Point:</label>
                                @Html.DisplayFor(model => model.UserPoint.MaKH)
                            </td>
                        </tr>
                    </table>
                    <div class=" col-12" style="white-space: nowrap; margin: 4px auto; border: 2px solid #000; padding: 10px 10px 10px 10px; font-size: 20px; text-align: center; max-width: fit-content; font-weight: bold; border-radius: 5px; margin-left: inherit;">
                        @Html.ActionLink("Quay lại", "QLKhachHang")
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
