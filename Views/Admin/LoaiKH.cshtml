@model IEnumerable<CNPM_Tour.Models.LoaiKH>
@{
    ViewBag.Title = "LoaiKH";
    Layout = "~/Views/Admin/Layout/_Admin.cshtml";
    ViewBag.Name = "Quản lý khách hàng";
    ViewBag.qlkh = "active";
}

<body>
    @* table 1*@
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-sm btn-add " type="button" title="Thêm Tour" href="~/Admin/TaoLoaiKH">
                <i class="fas fa-plus"> </i> Thêm Loại khách hàng
            </a>
            <div class="tile" >
                <h2 class="tile-title">Danh sách Loại khách hàng</h2>
                <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MaLKH)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LoaiKH1)
                            </th>                           
                            <th>
                                <span> Chức năng</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaLKH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiKH1)
                                </td>
                               
                                <td>
                                    @Html.ActionLink("Delete", "XoaLoaiKH", new { id = item.MaLKH })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @*<a class="btn btn-cancel" title="Trở lại" href="~/Tourmanager/QuanLyTour">
                        Trở lại
                    </a>*@
            </div>
        </div>
    </div>
    
</body>

