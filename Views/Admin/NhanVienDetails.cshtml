@model CNPM_Tour.Models.NhanVien
@{
    ViewBag.Title = "NhanVienDetails";
    Layout = "~/Views/Admin/Layout/_Admin.cshtml";
    ViewBag.Name = "Quản lý nhân viên";
    ViewBag.qlnv = "active";
}



<div>
    <div class="" style="height: 100%; display: flex; justify-content: center; align-items: center;">
        <p class="" style="font-size: 24px; border: 2px solid #000; border-radius: 10px;padding:10px; font-weight: bold;">Chi tiết nhân viên</p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <form action="/action_page.php">
                    <table class="table table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" role="grid" aria-describedby="sampleTable_info">
                        <h2 class="tile-title">Nhân viên @Html.DisplayFor(model => Model.MaNV)</h2>
                        <tr style="display:flex;width:100%">
                            <td>
                                <label for="fname">Mã nhân viên:</label>
                                @Html.DisplayFor(model => model.MaNV)
                                @*<input type="text" id="fname" name="fname" style="border:none ; width:auto">*@
                            </td>
                        </tr>
                        <tr style="display:flex;width:100%">
                            <td>
                                <label for="fname">Tên nhân viên:</label>
                                @Html.DisplayFor(model => model.TenNV)
                                @*<input type="text" id="fname" name="fname" style="border:none ; width:auto">*@
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Chức vụ:</label>
                                @Html.DisplayFor(model => model.ChucVu)

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label for="fname">Trạng thái:</label>
                                @Html.DisplayFor(model => model.TrangThai)

                            </td>

                        </tr>
                    </table>
                    <div class=" col-12" style="white-space: nowrap; margin: 4px auto; border: 2px solid #000; padding: 10px 10px 10px 10px; font-size: 20px; text-align: center; max-width: fit-content; font-weight: bold; border-radius: 5px; margin-left: inherit;">
                        @Html.ActionLink("Quay lại", "QLNhanVien")
                    </div>
                </form>
            </div>
        </div>
    </div>





    
</div>



