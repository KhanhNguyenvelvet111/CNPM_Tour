@model CNPM_Tour.Models.Coupon
@{
    ViewBag.Title = "XoaCTKM";
    Layout = "~/Views/Admin/Layout/_Admin.cshtml";
    ViewBag.Name = "Chương trình khuyến mãi";
    ViewBag.ctkm = "active";
}
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="" style="height: 100%; display: flex; justify-content: center; align-items: center;">
            <p class="" style="font-size: 24px; border: 2px solid #000; border-radius: 10px;padding:10px; font-weight: bold;">Xóa tour</p>
        </div>
        <hr />
        <table class="table table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" role="grid" aria-describedby="sampleTable_info">
            <tr style="display:flex;width:100%">
                <td>
                    <label for="fname">Mã tour:</label>
                    @Html.DisplayFor(model => model.MaCoupon)

                </td>
            </tr>

            <tr>
                <td>
                    <label for="fname">Tên tour:</label>
                    @Html.DisplayFor(model => model.Discount)
                </td>
            </tr>
        </table>
        <div class="row">
            <div class=" col-4" style="justify-content: center; white-space: nowrap; margin: 4px auto; border: 2px solid #000; padding: 15px 10px 10px 10px; font-size: 20px; text-align: center; max-width: fit-content; font-weight: bold; border-radius: 5px; margin-left: 3%;">
                @Html.ActionLink("Quay lại", "ChuongTrinhKhuyenMai")
            </div>
            <div class=" col-8" style=" justify-content: center; white-space: nowrap; margin: 4px auto; border: 2px solid #000; padding: 10px; font-size: 20px; text-align: center; max-width: fit-content; font-weight: bold; border-radius: 5px; margin-right: 18%;">
                <input type="submit" value="Xóa Tour" class="btn btn-default" style="justify-content: center; font-size: 20px; font-weight: bold " />
            </div>
        </div>
    </div>
}
